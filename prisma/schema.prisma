generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Feed {
  id    String @id @map("_id") @default(auto()) @db.ObjectId
  url   String  @unique
  image String?
  title String
  text  String
  date  DateTime
}

model User {
  id       String   @id @map("_id") @default(auto()) @db.ObjectId
  name     String
  email    String   @unique
  password String
  createdAt DateTime @default(now())
}

model AdBid {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  size      String
  minCPM    Float
  maxCPM    Float
  geo       String
  adType    String
  frequency Int
  creative  String
  createdAt DateTime @default(now())
}
